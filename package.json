{
    "name": "mag-boilerplate",
    "version": "1.2.0",
    "description": "Application template.",
    "author": {
        "name": "Stanislav Kalashnik",
        "email": "darkpark.main@gmail.com"
    },
    "scripts": {
        "mocha": "../../node_modules/.bin/mocha",
        "eslint": "../../node_modules/.bin/eslint",
        "runner": "../../node_modules/.bin/runner",
        "lint": "npm run eslint .",
        "lint:fix": "npm run eslint --fix .",
        "test": "npm run lint",
        "android-app": "PLATFORM=ANDROIDAPP npm run runner",
        "android-app:build": "npm run android-app build",
        "android-app:develop": "DEVELOP=true npm run android-app develop",
        "android-stb": "PLATFORM=ANDROIDSTB npm run runner",
        "android-stb:build": "npm run android-stb build",
        "android-stb:develop": "DEVELOP=true npm run android-stb develop",
        "smarttv": "PLATFORM=SMARTTV npm run runner",
        "smarttv:build": "npm run smarttv build",
        "smarttv:develop": "DEVELOP=true npm run smarttv develop",
        "mag": "PLATFORM=MAG npm run runner",
        "mag:build": "npm run mag build",
        "mag:develop": "DEVELOP=true npm run mag develop",
        "tizen": "PLATFORM=TIZEN npm run runner",
        "tizen:build": "npm run tizen build",
        "tizen:develop": "DEVELOP=true npm run tizen develop",
        "webos": "PLATFORM=WEBOS npm run runner",
        "webos:build": "npm run webos build",
        "webos:develop": "DEVELOP=true npm run webos develop",
        "build": "npm run android-app build & npm run android-stb build & npm run smarttv build & npm run mag build & npm run tizen build & npm run webos build",
        "build:develop": "npm run android-app:develop build & npm run android-stb:develop build & npm run smarttv:develop build & npm run mag:develop build & npm run tizen:develop build & npm run webos:develop build",
        "start": "npm run mag:develop"
    },
    "dependencies": {
        "mag-app": "^2.0.0",
        "mag-component-check-list": "^1.3.0",
        "mag-component-footer": "^2.0.9",
        "mag-component-layout": "^1.0.1",
        "mag-component-layout-list": "^1.2.1",
        "mag-component-modal": "^1.0.12",
        "mag-component-modal-check-list": "^2.0.1",
        "mag-component-panel": "^1.0.6",
        "mag-component-panel-set": "^1.0.4",
        "mag-component-radio-list": "^2.3.0",
        "mag-component-scroll-area": "^1.0.3",
        "spa-dom": "^1.4.1",
        "spa-gettext": "^1.4.1",
        "stb-component-page": "^1.4.1",
        "stb-component-scrollbar": "^1.0.0",
        "stb-keys": "^1.4.4"
    },
    "keywords": [
        "magcore",
        "application",
        "ministra",
        "boilerplate"
    ]
}
